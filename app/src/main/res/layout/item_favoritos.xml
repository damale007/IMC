<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" >

            <TextView
                android:id="@+id/idFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="17 septiembre 1974"
                android:textSize="19sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/idPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="86"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/idFecha"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/idUnidadPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="Kgs."
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/idPeso"
                app:layout_constraintStart_toEndOf="@id/idPeso"/>

            <TextView
                android:id="@+id/idPesoResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                tools:text="Kgs."
                app:layout_constraintTop_toBottomOf="@id/idPeso"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>